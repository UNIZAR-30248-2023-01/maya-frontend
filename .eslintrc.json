{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:chai-friendly/recommended",
        "plugin:cypress/recommended",
        "plugin:react/recommended",
        "next/core-web-vitals"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "cypress/no-unnecessary-waiting": "off",
        "cypress/unsafe-to-chain-command": "off",
        "@next/next/no-img-element": "off"
    }
}